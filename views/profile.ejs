  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    function toggleform() {
      const elements = document.querySelectorAll(".toggle");
      elements.forEach((element) => {
        element.classList.toggle("hidden")
      });
    }
    document.addEventListener("DOMContentLoaded", function () {
      var tabTriggers = document.querySelectorAll('[data-toggle="tab"]');
      tabTriggers.forEach(function (tab) {
        tab.addEventListener("click", function (event) {
          event.preventDefault();
          var tabTarget = new bootstrap.Tab(this);
          tabTarget.show();
        });
      });
    });
    if (<%= myProfile %>) {
      document.getElementById("profile-form").addEventListener("submit", (event) => {
        event.preventDefault();
        const formdata = new FormData(event.target);
        const jsonData = Object.fromEntries(formdata.entries());
        axios
          .post("/profile", jsonData, {
            headers: { "Content-Type": "multipart/form-data" },
          })
          .then((response) => {
            window.location.href = "/profile";
            console.log(response);
          })
          .catch((error) => console.log(error.response.data));
      });
    }

    const follow_form = document.getElementById("follow");
    follow_form.addEventListener("submit", (event) => {
      event.preventDefault();

      const button = document.getElementById("fbtn");
      button.classList.toggle("btn-outline-primary");
      button.classList.toggle("btn-primary");
      button.innerHTML = "Unfollow"

      const formData = new FormData(event.target);
      const jsonData = Object.fromEntries(formData.entries());

      axios.post("/follow", jsonData).then((response) => {
        // console.log(response.data);
      });
    })

  </script>
